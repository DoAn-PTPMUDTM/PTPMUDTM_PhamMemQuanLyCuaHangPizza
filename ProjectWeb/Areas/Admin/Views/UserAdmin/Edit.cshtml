@model ProjectWeb.Models.user

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chỉnh sửa nhân viên</h4>
            @using (Html.BeginForm("doUpdate", "UserAdmin", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "forms-sample" }))
            {
                <div class="form-group">
                    <label>Email: @Model.email</label>
                </div>
                @Html.HiddenFor(m => m.user_id)
                <div class="form-group">
                    <label>Tên </label>
                    @Html.TextBoxFor(m => m.full_name,
                    new { required = "required", @class = "form-control", placeholder = "Tên nhân viên" })
                </div>

                <div class="form-group">
                    <label>Mật khẩu </label>
                    @Html.TextBoxFor(m => m.password,
                    new { required = "required", @class = "form-control", placeholder = "Mật khẩu" })
                </div>

                if (TempData["error"] != null)
                {
                    <div class="form-group bg-gradient-success p-2">
                        <span class="text-success">Thêm nhân viên thành công</span>
                    </div>
                }

                <input type="submit" class="btn btn-gradient-primary me-2" name="add" value="Sửa">
            }
        </div>
    </div>
</div>